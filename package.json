{
  "name": "nimp",
  "version": "0.0.1",
  "description": "Nodejs image manipulation package",
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "tsc --noEmit && jest --colors",
    "test:png": "tsc --noEmit && jest --colors --selectProjects=png",
    "test:bmp": "tsc --noEmit && jest --colors --selectProjects=bmp",
    "lint": "tsc --noEmit && eslint ./src/**/*.ts",
    "lint:fix": "eslint ./src/**/*.ts --fix",
    "benchmark": "ts-node ./benchmarks/decoder/index.bench.ts"
  },
  "keywords": [
    "png",
    "encoder",
    "decoder"
  ],
  "author": "Boykiv Bogdan <boikiv.bogdan@gmail.com>",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/blackPavlin/nimp.git"
  },
  "devDependencies": {
    "@types/benchmark": "^2.1.1",
    "@types/bmp-js": "^0.1.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.11.25",
    "@types/pngjs": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "benchmark": "^2.1.4",
    "bmp-js": "^0.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "lint-staged": "^11.1.2",
    "pngjs": "^6.0.0",
    "prettier": "^2.4.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.2.1",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run test"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
