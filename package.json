{
  "name": "nimp",
  "version": "0.0.1",
  "description": "Nodejs image manipulation package",
  "main": "lib/index.js",
  "type": "module",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "tsc --noEmit && jest --colors",
    "test:png": "tsc --noEmit && jest --colors --selectProjects=png",
    "lint": "tsc --noEmit && eslint ./src/**/*.ts",
    "lint:fix": "eslint ./src/**/*.ts --fix",
    "benchmark": "node --loader ts-node/esm ./src/png/benchmarks/decoder/pngjs.bench.ts"
  },
  "keywords": [
    "png",
    "encoder",
    "decoder"
  ],
  "author": "Boykiv Bogdan <boikiv.bogdan@gmail.com>",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/blackPavlin/nimp.git"
  },
  "devDependencies": {
    "@types/benchmark": "^2.1.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.10",
    "@types/pngjs": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.1.0",
    "benchmark": "^2.1.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "pngjs": "^7.0.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run test"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
