{
  "name": "nimp",
  "version": "0.0.1",
  "description": "Nodejs image manipulation package",
  "main": "lib/index.js",
  "type": "module",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "tsc --noEmit && jest --colors",
    "test:png": "tsc --noEmit && jest --colors --selectProjects=png",
    "lint": "tsc --noEmit && eslint ./src/**/*.ts",
    "lint:fix": "eslint ./src/**/*.ts --fix",
    "benchmark": "ts-node ./benchmarks/png/decoder/index.bench.ts"
  },
  "keywords": [
    "png",
    "encoder",
    "decoder"
  ],
  "author": "Boykiv Bogdan <boikiv.bogdan@gmail.com>",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/blackPavlin/nimp.git"
  },
  "devDependencies": {
    "@types/benchmark": "^2.1.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.4",
    "@types/pngjs": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "benchmark": "^2.1.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "pngjs": "^7.0.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run test"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
